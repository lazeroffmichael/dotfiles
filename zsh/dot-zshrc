# ENV VARIABLES
export ZSH="$HOME/.oh-my-zsh"               
export DOTFILES="$HOME/dotfiles"
export NVIMCONF="$HOME/.config/nvim"

# ALIASES
alias ll="ls -lla"

# THEME
# gnzh, eastwood, Kphoen, robbyrussel
ZSH_THEME="gnzh"

# Enable basic plugins
# GIT aliases: https://github.com/ohmyzsh/ohmyzsh/tree/master/plugins/git#aliases
plugins=(git command-not-found)

# SOURCE oh-my-zsh
source $ZSH/oh-my-zsh.sh
